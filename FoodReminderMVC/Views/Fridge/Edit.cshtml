@model FoodReminderMVC.ViewModels.FridgeViewModel
@{
}

<h1 class="text-center">Fridges Available</h1>
<div class="container">
    <div class="">
        
        
            <div class="">
                <h2>Fridge name: @Model.name</h2>
                <p>Capacity: @Model.capacity</p>

                <h4>Items: </h4>
                @foreach (var product in Model.Products)
                {
                    <hr class="dropdown-divider" />
                    <p>Product Name: @product.Name</p>
                    <p>Added date: @product.AddedDate</p>
                    <p>Expiration date: @product.ExpirationDate</p>


                }
            </div>

        
    </div>
</div>