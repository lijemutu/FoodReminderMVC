@model FoodReminderMVC.Models.Fridge
@{
}

<div class="container shadow m-2 p-2">
    <div class=" text-center">
        <h1 class="">Create Fridge</h1>

    </div>
    <hr class="dropdown-divider" />
    
    <div>
        <div class="row" >
            <div class="d-sm-none  d-none  d-md-none d-lg-block col-4 " align="center">
                <img width="350" height="250" class="" src="/static/refrigerator.svg"/>
            </div>
    
            <div class="col-lg-8 col-md-12 col-xs-12 col-sm-12" >

                <div class="">
                    <form asp-action="Create" class="bordered simple-form" id="githubSearchForm" method="POST">
                        <label asp-for="Name">Name: </label>
                        <input asp-for="Name" name="fridgeName" id="fridgeName"><br>
                        <label asp-for="Capacity">Capacity: </label>
                        <input asp-for="Capacity" name="fridgeCapacity" id="fridgeCapacity"><br>
                        <input type="submit" value="Submit"><br>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>